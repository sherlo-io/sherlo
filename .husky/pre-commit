#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if README.md is staged
if git diff --cached --name-only | grep -q "^README\.md$"; then
  echo "ðŸ“‹ Syncing README.md to packages/react-native-storybook..."
  cp README.md packages/react-native-storybook/README.md
  git add packages/react-native-storybook/README.md
  echo "âœ… README.md synced successfully"
fi
