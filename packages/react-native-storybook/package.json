{
  "name": "@sherlo/react-native-storybook",
  "version": "1.5.6",
  "description": "Sherlo is a Visual Testing tool for React Native Storybook",
  "keywords": [
    "visual testing",
    "react-native",
    "storybook"
  ],
  "license": "MIT",
  "author": "Sherlo",
  "homepage": "https://sherlo.io",
  "bugs": {
    "url": "https://github.com/sherlo-io/sherlo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sherlo-io/sherlo.git",
    "directory": "packages/react-native-storybook"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./lite": {
      "types": "./dist/lite.d.ts",
      "react-native": "./dist/lite.js",
      "require": "./dist/lite.js",
      "default": "./dist/lite.js"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "src/specs/**/*",
    "dist/**/*",
    "android/**/*",
    "ios/**/*",
    "app.plugin.js",
    "sherlo-react-native-storybook.podspec",
    "lite.js",
    "lite.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p .",
    "dev": "yarn build --watch",
    "test": "jest"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react",
            "esModuleInterop": true,
            "module": "commonjs",
            "moduleResolution": "node"
          }
        }
      ]
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "base-64": "1.0.0",
    "deepmerge": "4.3.1",
    "its-fine": "2.0.0",
    "sherlo": "^1.5.6",
    "utf8": "3.0.0"
  },
  "devDependencies": {
    "@storybook/react-native": "9.1.2",
    "@types/base-64": "^1.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.73.0",
    "@types/utf8": "^3.0.1",
    "jest": "^29.7.0",
    "react-native-safe-area-context": "4.11.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@storybook/react-native": ">=7.6.11",
    "react": "*",
    "react-native": ">=0.64.0",
    "react-native-safe-area-context": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "codegenConfig": {
    "name": "sherlo_codegen",
    "type": "modules",
    "jsSrcsDir": "./src/specs",
    "android": {
      "javaPackageName": "io.sherlo.storybookreactnative"
    }
  }
}
